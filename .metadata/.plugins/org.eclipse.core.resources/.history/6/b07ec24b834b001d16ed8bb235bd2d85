package kr.bit.controller;

import java.io.IOException;
import java.io.PrintWriter;
import java.util.ArrayList;

import javax.servlet.ServletException;
import javax.servlet.annotation.WebServlet;
import javax.servlet.http.HttpServlet;
import javax.servlet.http.HttpServletRequest;
import javax.servlet.http.HttpServletResponse;

import kr.bit.model.MemberDAO;
import kr.bit.model.MemberVO;


@WebServlet("/memberList.do")
public class MemberListController extends HttpServlet {
	
	protected void service(HttpServletRequest request, HttpServletResponse response) throws ServletException, IOException {
		
		//1. 클라이언트의 요청을 받는다. -> memberList.do
		//2. 회원 전체리스트 가져오기 -> model(DAO)과 연동
		MemberDAO dao = new MemberDAO();
		
		//memberList() -> dao에서 전체 회원리스트를 가져오고 묶고 list에 담는 메서드
		ArrayList<MemberVO> list = dao.memberList(); 
		
		//3. 회원전체리스트를 HTML로 만들어서 응답하기  
		//System.out.println(list); 리스트 확인하기 
		PrintWriter out = response.getWriter(); 
		out.println("<html>");
		out.println("<body>");
		out.println("<table class="tg">");
		out.println("<thead>");
		  out.println("<tr>");
		    out.println("<th class="tg-0lax">번호</th>");
		    out.println("<th class="tg-0lax">아이디</th>");
		    out.println("<th class="tg-0lax">비밀번호</th>");
		    out.println("<th class="tg-0lax">이름</th>");
		    out.println("<th class="tg-0lax">나이</th>");
		    out.println("<th class="tg-0lax">이메일</th>");
		    out.println("<th class="tg-0lax">전화번호</th>");
		  </tr>
		</thead>
		out.println("<tbody>");
		  out.println("<tr>");
		    out.println("<td class="tg-0lax"></td>");
		    out.println("<td class="tg-0lax"></td>");
		    out.println("<td class="tg-0lax"></td>");
		    out.println("<td class="tg-0lax"></td>");
		    out.println("<td class="tg-0lax"></td>");
		    out.println("<td class="tg-0lax"></td>");
		    out.println("<td class="tg-0lax"></td>");
		  </tr>
		</tbody>
		</table>
		out.println("</body>");
		out.println("</html>");
	}

}
